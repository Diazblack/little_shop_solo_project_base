<%= form_for  [@o_item, @rating] do |f|  %>
  <div class="field">
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :rate %>
    <%= f.text_field :rate %>
  </div>

  <div class="actions">
      <%= f.submit %>
  </div>
<% end  %>
